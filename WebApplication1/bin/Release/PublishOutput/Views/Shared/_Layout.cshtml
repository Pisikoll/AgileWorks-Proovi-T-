                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kodu", "Index", "Home")</li>
                    <li>@Html.ActionLink("Lisa pöördumine", "appeal", "Home")</li>
                    <li>@Html.ActionLink("Vaata pöördumisi", "ShowAppeals", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Tauri Tammaru - tauri.tammaru@gmail.com - 2017</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
